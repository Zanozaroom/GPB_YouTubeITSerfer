<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="TA_TextView" format="reference"/>
    <attr name="TA_TextViewTitleHead" format="reference" />
    <attr name="TA_TextViewTitleHeadBig" format="reference" />
    <attr name="TA_TextViewTitleLittle" format="reference" />
    <attr name="TA_TextViewTitleScrollLittle" format="reference" />
    <attr name="TA_TextViewBodyInfo" format="reference" />
    <attr name="TA_Toolbar" format="reference" />
    <attr name="TA_IconButtonBig" format="reference" />
    <attr name="TA_IconButtonMedium" format="reference" />
    <attr name="TA_IconButtonNormal" format="reference" />

    <style name="CustomTextViewTextAppearance.HeadTitle">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_on_primary_variant</item>
    </style>
    <style name="CustomTextViewTextAppearance.HeadTitle.Big">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="CustomTextViewTextAppearance.TitleLittle">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="CustomTextViewTextAppearance.ScrollLittle">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="CustomTextViewTextAppearance.BodyInfo">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CustomToolbarTextAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomTextViewTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>
    <style name="CustomButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomButtonTextAppearance.Medium">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="CustomButtonTextAppearance.Big">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>