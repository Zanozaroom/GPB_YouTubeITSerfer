<resources xmlns:tools="http://schemas.android.com/tools">
    <!--custom attr!-->
    <!-- Base application theme. -->
    <style name="Theme.OtusProject_Ermoshina" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Add custom attributes. -->
        <item name="TA_TextView">@style/CustomTextViewTextAppearance</item>
        <item name="TA_TextViewTitleHead">@style/CustomTextViewTextAppearance.HeadTitle</item>
        <item name="TA_TextViewTitleLittle">@style/CustomTextViewTextAppearance.TitleLittle</item>
        <item name="TA_TextViewTitleScrollLittle">@style/CustomTextViewTextAppearance.ScrollLittle
        </item>
        <item name="TA_TextViewBodyInfo">@style/CustomTextViewTextAppearance.BodyInfo</item>
        <item name="TA_TextViewTitleHeadBig">@style/CustomTextViewTextAppearance.HeadTitle.Big
        </item>
        <item name="TA_IconButtonMedium">@style/CustomButtonTextAppearance.Medium</item>
        <item name="TA_IconButtonNormal">@style/CustomButtonTextAppearance</item>
        <item name="TA_IconButtonBig">@style/CustomButtonTextAppearance.Big</item>
        <item name="TA_Toolbar">@style/CustomToolbarTextAppearance</item>
        <item name="BS_Fill">@style/CustomFillButtonStyleIcon</item>
        <item name="BS_FillMinimal">@style/CustomFillButtonStyleIcon.Minimal</item>
        <item name="BS_Outline">@style/ButtonStyleOutline</item>
        <item name="BS_OutlineMinimal">@style/ButtonStyleOutline.Minimal</item>
        <item name="BS_OutlineOnSearch">@style/ButtonStyleOutline.OnSearch</item>
        <item name="CLR_white">@color/white</item>
        <item name="CLR_shapeOnImage">@color/color_parent_decorator</item>
        <!-- Add custom styles. -->
        <item name="toolbarStyle">@style/MyToolbar</item>
        <item name="textInputStyle">@style/EditTextStyle</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">?attr/TA_Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="tintNavigationIcon">@color/white</item>
    </style>

</resources>