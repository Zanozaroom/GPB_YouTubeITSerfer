<resources xmlns:tools="http://schemas.android.com/tools">
    <!--custom attr!-->
    <!-- Base application theme. -->
    <style name="Theme.OtusProject_Ermoshina" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Add custom attributes. -->
        <item name="CA_color_on_primary_variant">@color/color_on_primary_variant</item>
        <item name="textAppearanceTextView">@style/CustomTextViewTextAppearance</item>
        <item name="TA_TextViewTitleHead">@style/CustomTextViewTextAppearance.HeadTitle</item>
        <item name="TA_TextViewTitleLittle">@style/CustomTextViewTextAppearance.TitleLittle</item>
        <item name="TA_TextViewTitleScrollLittle">@style/CustomTextViewTextAppearance.ScrollLittle
        </item>
        <item name="TA_TextViewBodyInfo">@style/CustomTextViewTextAppearance.BodyInfo</item>
        <item name="TA_TextViewTitleHeadBig">@style/CustomTextViewTextAppearance.HeadTitle.Big
        </item>


        <item name="textAppearanceFillButton">@style/CustomButtonTextAppearance</item>
        <item name="textAppearanceToolbar">@style/CustomToolbarTextAppearance</item>
        <item name="textAppearanceTextDialogBody">@style/CustomDialogBodyTextAppearance</item>
        <item name="ButtonStyleOutline.Search">@style/ButtonStyleOutline.OnSearch</item>
        <!-- Add custom styles. -->
        <item name="toolbarStyle">@style/MyToolbar</item>
        <item name="textInputStyle">@style/EditTextStyle</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>

    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">?attr/textAppearanceToolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/color_primary_variant</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="tintNavigationIcon">@color/white</item>
    </style>

</resources>