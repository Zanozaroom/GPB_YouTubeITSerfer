<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="BS_Fill" format="reference"/>
    <attr name="BS_FillMinimal" format="reference"/>
    <attr name="BS_Outline" format="reference"/>
    <attr name="BS_OutlineMinimal" format="reference"/>
    <attr name="BS_OutlineOnSearch" format="reference"/>

    <style name="CustomFillButtonStyleIcon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/CLR_white</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textColor">?attr/CLR_white</item>
        <item name="android:textAppearance">?attr/TA_IconButtonMedium</item>
    </style>
    <style name="CustomFillButtonStyleIcon.Minimal">
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:textAppearance">?attr/TA_IconButtonNormal</item>
    </style>

    <style name="ButtonStyleOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="paddingStart">1dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">?attr/TA_IconButtonMedium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/CLR_white</item>
    </style>
    <style name="ButtonStyleOutline.Minimal" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAppearance">?attr/TA_IconButtonNormal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/CLR_white</item>
    </style>
    <style name="ButtonStyleOutline.OnSearch">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">?attr/TA_IconButtonNormal</item>
        <item name="android:minHeight">20dp</item>
    </style>


    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>
<style name="Base.Widget.AppCompat.TextView.MyHeaders">
    <item name="background">@drawable/shape_rect_round</item>
</style>

</resources>