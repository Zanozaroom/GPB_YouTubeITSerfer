<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextViewTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>
    <style name="CustomTextViewTextAppearance.HeadTitle">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_on_primary_variant</item>
    </style>
    <style name="CustomTextViewTextAppearance.HeadTitle.Big">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="CustomTextViewTextAppearance.TitleLittle">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="CustomTextViewTextAppearance.ScrollLittle">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="CustomTextViewTextAppearance.BodyInfo">
        <item name="android:textSize">12sp</item>
    </style>



    <style name="CustomDialogBodyTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomToolbarTextAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_family</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyleIcon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">@color/color_fragment_background</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/color_fragment_background</item>
        <item name="android:textAppearance">?attr/textAppearanceFillButton</item>
    </style>
    <style name="ButtonStyleIcon.Minimal">
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAppearance">?attr/TA_TextViewBodyInfo</item>
    </style>
    <style name="ButtonStyleIcon.Outline">
        <item name="iconTint">?attr/CA_color_on_primary_variant</item>
        <item name="android:minHeight">0dp</item>
        <item name="backgroundTint">@color/color_fragment_background</item>
        <item name="android:textAppearance">?attr/TA_TextViewTitleScrollLittle</item>
    </style>

    <style name="ButtonStyleOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:textAppearance">?attr/textAppearanceFillButton</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/colorSecondary</item>
    </style>
    <style name="ButtonStyleOutline.OnSearch">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">?attr/TA_TextViewBodyInfo</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="ButtonStyleOutline.OnSearch.Medium">
        <item name="android:textAppearance">?attr/TA_TextViewTitleLittle</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="ButtonStyleOutline.OnSearch.MediumColor">
        <item name="android:textAppearance">?attr/TA_TextViewTitleLittle</item>
        <item name="android:textColor">?attr/CA_color_on_primary_variant</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="ButtonStyleOutline.OnChildRecycler" >
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="strokeColor">?attr/colorSecondary</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>
<style name="Base.Widget.AppCompat.TextView.MyHeaders">
    <item name="background">@drawable/shape_rect_round</item>
</style>

</resources>