<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OtusProject_Ermoshina.LightNight">
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/ButtonStyleOutline</item>
    </style>
    //set style for custom view
    <style name="ButtonStyleOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="paddingStart">1dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">?attr/TA_IconButtonMedium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/CLR_white</item>
    </style>
    <style name="CustomFillButtonStyleIcon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/TA_IconButtonMedium</item>
    </style>
</resources>